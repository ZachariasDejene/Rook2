<h5>Shopping Cart</h5>
<% if session[:cart].nil? %>
    <% flash[:notice] = 'Login to view your cart!'%>
 <br/>
 <% elsif session[:cart].empty? %>
  <br/>
    <%= 'Cart is Empty, Start Shopping!'%>
<br/>
 <br/>
  <br/>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Item</th>
        <th>Quantity</th>
        <th>Remove From Cart</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
          <% @items.each do |order_item| %>
            <tr>
              <td><%= link_to order_item.item.name, item_path(order_item.item_id) %></td>
              <td><%= order_item.quantity %></td>
                  <td><%= link_to(remove_from_cart_path(order_item.item_id), class: 'button tiny radius') do %>
                    &nbsp;<%= "Remove" %>
                    <% end %></td>
            </tr>
          <% end %>
    </tbody>
  </table>

<br>
<% end %>
<%= link_to(home_path, class: 'button tiny radius') do %>
  &nbsp;<%= "Continue Shopping" %>
  <% end %>
&nbsp;&nbsp;&nbsp;&nbsp;
<%= link_to(dump_cart_path, class: 'button tiny radius') do %>
  &nbsp;<%= "Empty Cart" %>
  <% end %>


<%= link_to(new_order_path, class: 'button tiny radius') do %>
&nbsp;<%= "Checkout" %>
<% end %>
