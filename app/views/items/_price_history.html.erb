<div id="price_history">
<% if logged_in? && (current_user.role?(:admin) || current_user.role?(:manager)) %>
        <% unless @price_history.empty? %>
          <div class="panel clearfix">
            <h3>Price History</h3>
            <ul>
              <% @price_history.each do |change| %>
                <%= number_to_currency change.price %>&nbsp;&nbsp;&nbsp;(<%= change.start_date.strftime('%m/%d/%y') %>)<br />
              <% end %>
            </ul>
            <%= link_to(new_item_price_path( format: :js, item_id: @item.id), id: 'price_change' , class: 'button tiny radius', remote: true) do %>
                &nbsp;<%= "Change Price" %>
            <% end %>
          </div>
        <% end %>
<% end %>

</div>