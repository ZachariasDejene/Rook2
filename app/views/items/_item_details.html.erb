<div id="current_stock">
<div class="row">
  <div class="small-7 columns">
    <h3><%= @item.name %></h3>
  </div>
  <div class="small-5 columns">
      <%= image_tag 'img_not_available.png' %>
  </div>
</div>

<p>
  <b>Description</b>: <%= @item.description %>
</p>
<div id="price_tester">
<p>
  <b>Price</b>: <%= @item.current_price.nil? ? 'N/A' : number_to_currency(@item.current_price) %>
</p>
</div>
<p><% if !logged_in? %>
<p>Want to make a purchase? <%= link_to 'Sign Up Here!', new_user_path, class: 'button tiny radius' %></p>
<% end %></p>
<p><% if logged_in? && (current_user.role?(:admin) || current_user.role?(:manager)) %>

    <p><%= link_to(new_purchase_path(item_id: @item.id), id: 'idtails', class: 'button tiny radius', remote: true) do %>
                &nbsp;<%= "Make a Purchase" %>
                <% end %></p>
    <p>
      <b>Inventory Level</b>: <%= @item.inventory_level.nil? ? 'N/A' : @item.inventory_level %>
    </p>
    <p>
      <b>Reorder Level</b>: <%= @item.reorder_level.nil? ? 'N/A' : @item.reorder_level %>
    </p>
<% end %></p>

<p>
  <b>Category</b>: <%= @item.category.capitalize %>
</p>

<p>
  <b>Color</b>: <%= @item.color.nil? ? 'N/A' : @item.color %>
</p>

<p>
  <b>Total weight</b>: <%= @item.weight.nil? ? 'N/A' : @item.weight %> lbs.
</p>

</div>
